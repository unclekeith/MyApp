<ResetPasswordScreen>
    md_bg_color: app.theme_cls.backgroundColor

    MDTopAppBar:
        type: "small"
        size_hint_x: .99
        pos_hint: {"top": 1}

        MDTopAppBarLeadingButtonContainer:

            MDActionTopAppBarButton:
                icon: "keyboard-backspace"
                on_release: 
                    root.manager.back()


    MDBoxLayout:
        orientation: 'vertical'
        pos_hint: {'center_x': 0.5, "center_y": .65}
        size_hint: .9, .3
        padding: 0,0,0,dp(100)
        spacing: dp(15)
        

        MDTextField:
            id: email
            # pos_hint: {"center_x": .5}
            allow_copy: True
            size_hint_x: .9
            radius: dp(9)
            on_text_validate: password.focus = True


            MDTextFieldHintText:
                text: "Enter Email"

        MDTextField:
            id: password
            # pos_hint: {"center_x": .5}
            allow_copy: True
            size_hint_x: .9
            radius: dp(9)
            
            MDTextFieldHintText:
                text: "Enter new password"


    MDButton:
        id: login
        on_release: root.reset(email=email.text, password=password.text)
        pos_hint: {'center_x': 0.5, "center_y": .55}
        radius: dp(0)

        MDButtonText:
            text: "Reset"

        MDButtonIcon:
            icon: 'lock-reset'
