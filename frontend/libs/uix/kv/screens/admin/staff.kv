<UsersScreen>
    md_bg_color: app.theme_cls.backgroundColor

    MDTopAppBar:
        id: appbar
        type: "small"
        pos_hint: {'top': 1}

        MDTopAppBarLeadingButtonContainer:


            MDActionTopAppBarButton:
                on_release: root.manager.back()
                icon: "arrow-left"


            MDListItemLeadingAvatar:
                pos_hint: {'center_y': .5}
                source: "data/images/final.png"

        MDTopAppBarTitle:
            text: "User Administration"


    MDScrollView:
        pos_hint: {'top': 0.9}
        size_hint_y: None
        height: root.height - appbar.height - dp(20)
        MDList:
            id: user_list
            spacing: 5
